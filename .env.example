# ========================================
# AI虚拟播客工作室 - 环境变量配置示例
# ========================================
# 请复制此文件为 .env 并填写实际配置值

# ========================================
# API配置
# ========================================

# OpenAI兼容API配置（支持OpenAI、DeepSeek、通义千问等）
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_BASE_URL=https://api.openai.com/v1

# Gemini配置 - 用于素材分析
GEMINI_API_KEY=your_gemini_api_key_here
GEMINI_BASE_URL=https://generativelanguage.googleapis.com/v1beta
GEMINI_MODEL=gemini-2.5-flash

# 腾讯混元配置（OpenAI兼容接口）
DEEPSEEK_API_KEY=your_hunyuan_api_key_here
DEEPSEEK_BASE_URL=https://api.hunyuan.cloud.tencent.com/v1
DEEPSEEK_MODEL=hunyuan-turbo

# 混元Vision配置 - 用于图片分析
HUNYUAN_API_KEY=your_hunyuan_api_key_here
HUNYUAN_BASE_URL=https://api.hunyuan.cloud.tencent.com/v1
HUNYUAN_VISION_MODEL=hunyuan-vision

# Gradio Space配置（可选：自部署DeepSeek）
USE_GRADIO_DEEPSEEK=false
GRADIO_SPACE_NAME=Mengnankk/deepseek-ai-DeepSeek-V3.1-test

# ========================================
# TTS语音合成配置
# ========================================

# TTS基础配置
TTS_API_KEY=your_tts_api_key_here
TTS_MODEL=tts-1
# 可选引擎: cosyvoice(音色适配), qwen3_tts, chatterbox, nihal_tts, indextts2_gradio, indextts2, openai
TTS_ENGINE=cosyvoice

# IndexTTS2 Gradio配置
INDEXTTS2_GRADIO_SPACE=IndexTeam/IndexTTS-2-Demo

# AliCloud CosyVoice配置（推荐）
ALICLOUD_DASHSCOPE_API_KEY=your_alicloud_api_key_here
ALICLOUD_DASHSCOPE_API_SECRET=your_alicloud_api_secret_here  # 音色克隆功能必需
COSYVOICE_MODEL=cosyvoice-v2
COSYVOICE_DEFAULT_VOICE=longxiaochun_v2
COSYVOICE_ENABLE_CLONE=true  # 是否启用音色克隆功能

# ========================================
# 音频处理配置
# ========================================

# FFmpeg配置（音频处理必需）
# Windows示例: D:/path/ffmpeg/bin
# Linux/Mac示例: /usr/local/bin
FFMPEG_PATH=path_to_ffmpeg_bin_directory
FFPROBE_PATH=path_to_ffmpeg_bin_directory

# ========================================
# 代理配置
# ========================================

# 用于访问HuggingFace等国际服务（可选）
PROXY_ENABLED=false
PROXY_TYPE=http
HTTP_PROXY=http://127.0.0.1:7890
HTTPS_PROXY=http://127.0.0.1:7890

# ========================================
# IndexTTS2本地模型配置（可选）
# ========================================

INDEXTTS_MODEL_DIR=checkpoints
INDEXTTS_VOICE_SAMPLES_DIR=voice_samples
INDEXTTS_EMOTION_SAMPLES_DIR=emotion_samples
INDEXTTS_USE_FP16=true
INDEXTTS_USE_CUDA_KERNEL=false

# ========================================
# RAG知识库配置
# ========================================

# RAG基础配置
RAG_ENABLED=true  # 启用RAG知识库深度集成
RAG_CHUNK_SIZE=1000
RAG_CHUNK_OVERLAP=200
RAG_MAX_SEARCH_RESULTS=5

# RAG自动导入配置
RAG_AUTO_INGEST=true  # 启动时自动导入知识库文件
RAG_AUTO_INGEST_PATTERNS=**/*.txt,**/*.md,**/*.pdf,**/*.docx
RAG_MAX_INITIAL_FILES=100  # 最大自动导入文件数量（0为不限制）

# 嵌入模型配置（推荐使用腾讯混元）
RAG_EMBEDDING_PROVIDER=hunyuan  # 可选: openai, hunyuan
RAG_EMBEDDING_MODEL=hunyuan-embedding
RAG_EMBEDDING_API_KEY=your_hunyuan_api_key_here
RAG_EMBEDDING_BASE_URL=https://api.hunyuan.cloud.tencent.com/v1
RAG_EMBEDDING_DIMENSIONS=1024  # 混元固定1024维

# 知识库存储路径
KNOWLEDGE_BASE_DIR=data/knowledge_base
VECTOR_STORE_DIR=data/knowledge_base/chroma_db

# ========================================
# 应用基础配置
# ========================================

DEBUG=true
HOST=0.0.0.0
PORT=8000
APP_NAME=AI虚拟播客工作室
APP_VERSION=1.0.0

# ========================================
# Docker配置（可选）
# ========================================

COMPOSE_PROJECT_NAME=ai-podcast-studio
CORS_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# ========================================
# Redis配置（可选）
# ========================================

REDIS_URL=redis://localhost:6379/0
REDIS_MAX_CONNECTIONS=10

# ========================================
# ChromaDB配置（可选）
# ========================================

CHROMA_HOST=localhost
CHROMA_PORT=8001
CHROMA_COLLECTION_NAME=podcast_knowledge
ANONYMIZED_TELEMETRY=false

# ========================================
# 文件存储配置
# ========================================

AUDIO_OUTPUT_DIR=data/output/audio
MAX_FILE_SIZE=52428800  # 50MB
UPLOADS_DIR=data/uploads
OUTPUTS_DIR=data/output
TEMP_DIR=data/temp
LOGS_DIR=data/output/logs

# ========================================
# 性能配置
# ========================================

WORKER_PROCESSES=1
WORKER_CONNECTIONS=1000
MAX_REQUESTS=1000
TIMEOUT=30

# ========================================
# 播客生成配置
# ========================================

ENABLE_AUDIO_GENERATION=true
TASK_WORKER_COUNT=2
