# API配置
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_BASE_URL=https://api.openai.com/v1

# Gemini配置 - 用于素材分析
GEMINI_API_KEY=your_gemini_api_key_here
GEMINI_BASE_URL=https://generativelanguage.googleapis.com/v1beta
GEMINI_MODEL=gemini-2.5-flash

# DeepSeek配置 - 用于剧本生成
DEEPSEEK_API_KEY=your_deepseek_api_key_here
DEEPSEEK_BASE_URL=https://api.deepseek.com/v1
DEEPSEEK_MODEL=deepseek-v3-chat

# TTS配置
TTS_API_KEY=your_tts_api_key_here
TTS_MODEL=tts-1
# TTS引擎选择：
# - qwen3_tts: 阿里通义千问TTS（中文优秀）
# - chatterbox: Chatterbox Multilingual（支持23种语言，需安装：pip install chatterbox-tts）
# - nihal_tts: NihalGazi TTS
# - indextts2_gradio: IndexTTS2 在线API（推荐）
# - indextts2: IndexTTS2 本地部署
# - openai: OpenAI TTS API
TTS_ENGINE=indextts2_gradio

# Qwen3-TTS配置
QWEN3_TTS_SPACE=Qwen/Qwen3-TTS-Demo

# Chatterbox Multilingual TTS配置
# 支持23种语言：zh, en, fr, ja, ko, es, de, it, pt, ru, ar, hi等
# 使用前需安装：pip install chatterbox-tts
# 无需其他配置，自动加载模型

# NihalGazi-TTS配置
NIHAL_TTS_SPACE=NihalGazi/Text-To-Speech-Unlimited

# IndexTTS2 Gradio配置
INDEXTTS2_GRADIO_SPACE=IndexTeam/IndexTTS-2-Demo

# IndexTTS2配置
INDEXTTS_MODEL_DIR=checkpoints
INDEXTTS_VOICE_SAMPLES_DIR=voice_samples
INDEXTTS_EMOTION_SAMPLES_DIR=emotion_samples
INDEXTTS_USE_FP16=true
INDEXTTS_USE_CUDA_KERNEL=false

# RAG知识库配置
RAG_ENABLED=true
RAG_CHUNK_SIZE=1000
RAG_CHUNK_OVERLAP=200
RAG_MAX_SEARCH_RESULTS=5
RAG_EMBEDDING_MODEL=text-embedding-ada-002
KNOWLEDGE_BASE_DIR=knowledge_base
VECTOR_STORE_DIR=knowledge_base/chroma_db

# 应用配置
DEBUG=true
HOST=0.0.0.0
PORT=8000
APP_NAME=AI虚拟播客工作室
APP_VERSION=1.0.0

# Docker配置
COMPOSE_PROJECT_NAME=ai-podcast-studio
CORS_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# Redis配置
REDIS_URL=redis://localhost:6379/0
REDIS_MAX_CONNECTIONS=10

# ChromaDB配置
CHROMA_HOST=localhost
CHROMA_PORT=8001
CHROMA_COLLECTION_NAME=podcast_knowledge

# 文件存储配置
AUDIO_OUTPUT_DIR=audio_output
MAX_FILE_SIZE=52428800
UPLOADS_DIR=uploads
OUTPUTS_DIR=outputs
TEMP_DIR=temp
LOGS_DIR=logs

# 性能配置
WORKER_PROCESSES=1
WORKER_CONNECTIONS=1000
MAX_REQUESTS=1000
TIMEOUT=30